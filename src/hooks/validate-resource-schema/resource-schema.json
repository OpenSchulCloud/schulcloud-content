{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type":"object",
  "required": [
    "title",
    "url",
    "licenses",
    "contentCategory",
    "mimeType"
  ],
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the resource.",
      "example": "C Programming Language"
    },
    "url": {
      "$ref": "#/definitions/URL"
    },
    "licenses": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "contentCategory": {
      "$ref": "#/definitions/ContentCategory"
    },
    "mimeType": {
      "type": "string",
      "description": "https://tools.ietf.org/html/rfc2046",
      "example":"text/html"
    }
  },
  "definitions": {
    "URL":{
      "type": "string",
      "pattern": "^https?://.+$",
      "example": "http://schul-cloud.org"
    },
    "ContentCategory":{
      "enum": ["atomic", "learning-object", "proven-learning-object", "tool"],
      "example":"learning-object"
    }
  }
}
